<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="PasteEx.Gui.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PasteEx.Gui"
    xmlns:tk="using:CommunityToolkit.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Spacing="10" VerticalAlignment="Top">
            <TextBlock x:Uid="MainPage_Title" Text="PasteEx Settings" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,12"/>
            
            <tk:SettingsCard x:Uid="Settings_EnableMenu" Header="Enable Context Menu" Description="Show 'Create folder with selection' in right-click menu">
                <ToggleSwitch x:Name="MenuToggle" Toggled="MenuToggle_Toggled" IsOn="True" />
            </tk:SettingsCard>
            
             <TextBlock x:Uid="Settings_Footer" Text="Changes take effect immediately." Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</Page>
